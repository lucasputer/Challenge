<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/back"
        android:background="@color/orange"
        android:layout_gravity="right"
        android:tag="back">

        <Button
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/btn_challenges_white"
            android:layout_centerVertical="true"
            android:id="@+id/btn_challenge_participate"
            android:layout_toLeftOf="@+id/btn_challenge_heart"
            android:layout_toStartOf="@+id/btn_challenge_heart" />

        <Button
            android:layout_width="28dp"
            android:layout_height="24dp"
            android:background="@drawable/btn_picture_heart_white"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/btn_challenge_heart"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:layout_alignTop="@+id/btn_challenge_participate" />



    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/front"
        android:orientation="horizontal"
        android:background="#fff3f3f3"
        android:tag="front">

        <com.application.challenge.challenge.domain.custom.CircularImageView
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/login_backround"
            android:layout_margin="8dp"
            android:id="@+id/circled_challenge_image" />


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/challenge_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Este es el titulo"
                android:textColor="@color/orange"
                android:textStyle="bold"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/challenge_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Esto es un subtitulo"
                android:textColor="@color/grey"
                android:textStyle="italic"
                android:textSize="14sp" />

            </LinearLayout>


    </LinearLayout>

</FrameLayout>