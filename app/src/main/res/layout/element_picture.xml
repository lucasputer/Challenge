<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp">



        <TextView
            android:id="@+id/picture_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginRight="12dp"
            android:layout_marginLeft="4dp"
            android:layout_gravity="center_horizontal"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/circled_picture_profile_image"
            android:layout_toEndOf="@+id/circled_picture_profile_image" />

        <com.application.challenge.challenge.domain.custom.CircularImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/login_backround"
            android:id="@+id/circled_picture_profile_image"
            android:layout_marginLeft="4dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <com.application.challenge.challenge.domain.custom.SquareImageView
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:id="@+id/picture_image" />


    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/picture_heart_amount"
        android:layout_margin="8dp"
        android:textColor="@color/orange"
        android:textStyle="bold"
        android:text="â™¥ 0 Me Gusta"/>

    <Button
        android:layout_width="28dp"
        android:layout_height="24dp"
        android:id="@+id/btn_picture_heart"
        android:layout_margin="8dp"
        android:onClick="likePicture"
        android:background="@drawable/btn_picture_heart"/>


</LinearLayout>
